<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:onClick="goBack"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/topLeftBtn"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/nav_left"

                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/mydata_setting"
                android:textColor="#666666"
                android:textSize="18dp" />

            <RelativeLayout
                android:id="@+id/save_rl"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_ok"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="保存"
                    android:textColor="@color/green"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@mipmap/bg_my_bg">

        <RelativeLayout
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true">

            <View
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/touxian" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:src="@mipmap/my_icon_bj" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head_rl"
            style="@style/mine_item_style02"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/head_tv"
                style="@style/mine_text_style02"
                android:text="头像" />


        </RelativeLayout>

        <View style="@style/view_style" />

        <RelativeLayout
            android:id="@+id/name_rl"
            style="@style/mine_item_style02"
            android:visibility="visible">

            <TextView
                android:id="@+id/name_title_tv"
                style="@style/mine_text_style02"
                android:text="昵称" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/my_icon_right" />

            <TextView
                android:id="@+id/name_tv"
                style="@style/mine_text_style03"
                android:layout_marginRight="50dp"
                android:hint="必填" />
        </RelativeLayout>

        <View style="@style/view_style" />

        <RelativeLayout
            android:id="@+id/sex_rl"
            style="@style/mine_item_style02">

            <TextView
                android:id="@+id/sex_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/sex" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/my_icon_right" />

            <TextView
                android:id="@+id/sex_tv"
                style="@style/mine_text_style03"
                android:layout_marginRight="50dp"
                android:text="未知" />
        </RelativeLayout>

        <View style="@style/view_style" />

        <RelativeLayout
            android:id="@+id/birthday_rl"
            style="@style/mine_item_style02">

            <TextView
                android:id="@+id/birthday_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/birthday" />

            <TextView
                android:id="@+id/birthday_tv"
                style="@style/mine_text_style03"
                android:layout_marginRight="50dp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/my_icon_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_rl"
            style="@style/mine_item_style02"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/phone_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/phone_tv"
                style="@style/mine_text_style03"
                android:text="13138569878" />
        </RelativeLayout>

        <View style="@style/view_style" />

        <RelativeLayout
            android:id="@+id/telephone_rl"
            style="@style/mine_item_style02"
            android:visibility="gone">

            <TextView
                android:id="@+id/telephone_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/telephone" />

            <TextView
                android:id="@+id/telephone_tv"
                style="@style/mine_text_style03"
                android:text="0770-6986549" />
        </RelativeLayout>

        <View
            style="@style/view_style"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/email_rl"
            style="@style/mine_item_style02"
            android:visibility="gone">

            <TextView
                android:id="@+id/email_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/email" />

            <TextView
                android:id="@+id/email_tv"
                style="@style/mine_text_style03"
                android:text="1458798787@qq.com" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/update_password_rl"
            style="@style/mine_item_style02">

            <TextView
                android:id="@+id/update_password_title_tv"
                style="@style/mine_text_style02"
                android:text="@string/update_password" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/my_icon_right" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="昵称必填"
            android:textColor="@color/red" />

    </LinearLayout>
</LinearLayout>