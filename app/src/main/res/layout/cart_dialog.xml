<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_cart_dialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:text="修改购买数量"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_select"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_reduce"
                android:src="@mipmap/icon_cart_reduce"
                android:adjustViewBounds="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="55dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_num"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#666666"
                android:inputType="number"
                android:maxLength="3"
                android:gravity="center"
                android:background="@drawable/bg_cart_dialog_selectbox"
                android:layout_width="50dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/iv_plus"
                android:src="@mipmap/icon_cart_plus"
                android:adjustViewBounds="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="55dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="25dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btn_cancel"
                android:text="取消"
                android:textSize="16sp"
                android:textColor="#fa4b00"
                android:background="@drawable/bg_cart_dialog_btn_cannel"
                android:layout_marginBottom="25dp"
                android:layout_width="110dp"
                android:layout_height="35dp" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btn_confirm"
                android:text="确定"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/bg_bottom_orange_long_radiusmax"
                android:layout_marginBottom="25dp"
                android:layout_width="110dp"
                android:layout_height="35dp" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>