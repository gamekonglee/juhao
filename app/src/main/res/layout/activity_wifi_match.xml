<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:background="#ff5500"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:onClick="goBack"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@mipmap/fh"
            android:layout_width="11dp"
            android:layout_height="20dp" />

    </RelativeLayout>
    <TextView
        android:text="确认家庭wifi"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginTop="50dp"
    android:background="@mipmap/bg_wifi"/>
<LinearLayout
    android:layout_gravity="bottom"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="217dp">
<LinearLayout
    android:background="@drawable/bg_corner_grey_5"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="27dp"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
        android:text="wifi名称:"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_wifi_name"
        android:text=""
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<View
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_change_wifi"
        android:text="更换网络"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_corner_grey_white_5"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_wifi_pwd"
            android:hint="请输入wifi密码"
            android:text=""
            android:background="@null"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_wifi_cansee"
            android:src="@mipmap/wifi_g"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
</FrameLayout>