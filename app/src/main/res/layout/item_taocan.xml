<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:background="@mipmap/banner_xdjy"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#66000000">
        <bc.juhao.com.ui.view.countdownview.CountdownView
            android:id="@+id/cv_countdownView"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="27dp"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:suffixDay="天"
            app:suffixGravity="center"
            app:suffixHour="小时"
            android:layout_centerVertical="true"
            app:suffixMillisecond="毫秒"
            app:suffixMinute="分钟"
            app:suffixSecond="秒"
            app:isShowSecond="true"
            app:suffixTextColor="@color/txt_black"
            app:suffixTextSize="11sp"
            app:timeTextColor="@color/txt_black"
            app:timeTextSize="11sp" />
    </RelativeLayout>
        <TextView
            android:text="点击查看更多"
            android:background="@drawable/bg_corner_full_orange_10"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_caotan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
</LinearLayout>