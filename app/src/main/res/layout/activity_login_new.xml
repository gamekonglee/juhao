<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <TextView
        android:text="登陆"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/find_pwd_tv"
        android:text="忘记密码"
        android:textColor="#444444"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@mipmap/login_bg">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/phone_iv"
            style="@style/txtDefaultStyle"
            android:layout_width="50dip"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_phone"/>

        <EditText
            android:id="@+id/phone_et"
            style="@style/editloginStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/phone_iv"
            android:hint="@string/him_phone"
            android:textColorHint="#aaaaaa"
            android:background="@null"/>
    </RelativeLayout>
    <View
        style="@style/view_style"
        />
    <RelativeLayout
        android:id="@+id/pwd_rl"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/pwd_iv"
            style="@style/txtDefaultStyle"
            android:layout_width="50dip"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_password"/>

        <EditText
            android:id="@+id/pwd_et"
            style="@style/editloginStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"
            android:digits="@string/digits_password"
            android:layout_toRightOf="@id/pwd_iv"
            android:hint="输入您的密码"
            android:textColorHint="#aaaaaa"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_see"
            android:src="@mipmap/login_hidden_password"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <View
            style="@style/view_style"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f6f6f6">
        <Button
            android:id="@+id/login_bt"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="40dp"
            android:text="@string/login"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/typeTv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_corner_cccccc_10"
            android:textColor="@color/green"
            android:text="@string/al_regiest"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/regiest_tv"
            android:text="@string/regiest"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:background="@drawable/bg_corner_cccccc_10"
            android:gravity="center"
            android:layout_centerInParent="true"

            />
        <TextView
            android:id="@+id/type02Tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:background="@drawable/bg_corner_cccccc_10"
            android:text="@string/Invitation_code"
            android:textSize="18sp"
            android:textColor="#444444" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>