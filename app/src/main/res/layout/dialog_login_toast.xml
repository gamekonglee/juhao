<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@mipmap/login_del"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <View
        android:layout_gravity="right"
        android:layout_marginRight="33dp"
        android:layout_width="1dp"
        android:background="#ffffff"
        android:layout_height="10dp"/>
        <ImageView
            android:src="@mipmap/login_bj"
            android:layout_width="250dp"
            android:layout_height="140dp" />
        <LinearLayout
            android:background="@drawable/bg_corner_trans_bottm_10"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_register"
                android:text="我是新客户，立即注册"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/bg_corner_green_5"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_login"
                android:text="我是老客户，立即登录"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/bg_corner_red_5"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>