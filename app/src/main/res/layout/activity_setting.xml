<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:onClick="goBack"
                android:paddingLeft="10dp">
                <ImageView
                    android:id="@+id/topLeftBtn"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/nav_left"

                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <TextView
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting"
                android:textColor="#666666"
                android:textSize="18dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <bc.juhao.com.ui.view.TextViewPlus
        android:id="@+id/tv_edit_info"
        android:text="编辑个人资料"
        android:background="#ffffff"
        android:textColor="#666666"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:drawableRight="@mipmap/my_icon_right"
        app:right_width="6dp"
        app:right_height="12dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <bc.juhao.com.ui.view.TextViewPlus
        android:id="@+id/tv_tuisong"
        android:text="消息推送"
        android:textColor="#666666"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:drawableRight="@mipmap/my_xx_sel"
        android:background="#ffffff"
        app:right_width="25dp"
        app:right_height="13dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:visibility="gone"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <bc.juhao.com.ui.view.TextViewPlus
        android:visibility="gone"
        android:text="意见反馈"
        android:textColor="#666666"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="#ffffff"
        android:drawableRight="@mipmap/my_icon_right"
        app:right_width="6dp"
        app:right_height="12dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/agreement_rl"
        style="@style/mine_item_style02"
        >
        <TextView
            style="@style/mine_text_style02"
            android:text="@string/agreement"/>
    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/privacy_rl"
        style="@style/mine_item_style02"
        >
        <TextView
            style="@style/mine_text_style02"
            android:text="@string/privacy"/>
    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/cache_rl"
        style="@style/mine_item_style02"
        >
        <TextView
            android:id="@+id/cache_title_tv"
            style="@style/mine_text_style02"
            android:text="@string/cleancache"/>
        <TextView
            android:id="@+id/cache_tv"
            style="@style/mine_text_style03"
            />
    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/about_rl"
        style="@style/mine_item_style02"
        >
        <TextView
            android:id="@+id/about_title_tv"
            style="@style/mine_text_style02"
            android:text="最新版本"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/type_iv"
            style="@style/mine_image_arrow"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/version_tv"
            style="@style/mine_text_style03"
            />
    </RelativeLayout>
    <View
        style="@style/view_style"
        />

    <Button
        android:id="@+id/outlogin_bt"
        style="@style/btnStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dp"
        android:text="@string/out_login"
        android:textSize="18dp"
        android:textColor="@color/white"/>
</LinearLayout>

