<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="110dp"
                android:background="@color/white"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_marginRight="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/product_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bg_default"
            />
        <TextView
            android:id="@+id/tv_end"
            android:visibility="gone"
            android:text="已抢完"
            android:textSize="12sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_img"
        android:textColor="#444444"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/price_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抢购价: "
        android:visibility="gone"
        android:layout_toRightOf="@id/rl_img"
        android:textColor="@color/txt_black"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/price_tv"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/price_title_tv"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/price_old_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原价: "
        android:visibility="invisible"
        android:layout_toRightOf="@id/price_tv"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/price_old_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/price_tv"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:id="@+id/rl_remaining_num_tv"
        android:layout_above="@+id/price_title_tv"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner_empty_theme_25"
        android:layout_toRightOf="@id/rl_img"
        android:layout_below="@+id/name_tv"
        android:layout_width="100dp"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/remaining_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/bg_corner_full_ffdac2_25"
            android:textColor="@color/green"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:gravity="center"
            android:text="剩余 0 件"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/go_buy_tv"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:background="@drawable/bg_corner_full_orange_10_selector"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="立即抢购"/>


</RelativeLayout>