<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="${relativePackage}.${activityClass}"
                android:id="@+id/rl_rl">

    <bc.juhao.com.ui.view.PullUpToLoadMore
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ptlm"
        android:orientation="vertical">
        <bc.juhao.com.ui.view.MyScrollView
            android:id="@+id/msv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/detail_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/convenientBanner_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/convenientBanner"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/time_ll"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/convenientBanner_rl"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/time_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:textColor="@color/green"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:text="还剩:"
                            />
                        <bc.juhao.com.ui.view.countdownview.CountdownView
                            android:id="@+id/cv_countdownView"
                            android:layout_toRightOf="@id/time_title_tv"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            app:isShowMillisecond="false"
                            app:isShowMinute="true"
                            app:suffixDay="天"
                            app:suffixGravity="center"
                            app:suffixHour="小时"
                            android:layout_centerVertical="true"
                            app:suffixMillisecond="毫秒"
                            app:suffixMinute="分钟"
                            app:suffixSecond="秒"
                            app:isShowSecond="true"
                            app:suffixTextColor="@color/green"
                            app:suffixTextSize="12dp"
                            app:timeTextColor="@color/green"
                            app:timeTextSize="12dp" />
                        <TextView
                            android:id="@+id/remaining_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:background="@drawable/shape_yellor_btn"
                            android:textColor="@color/green"
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"
                            android:text="剩余 0 件"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/proNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time_ll"
                        android:background="#FFFFFF"
                        android:paddingLeft="10dp"
                        android:textColor="#555555"
                        android:textSize="18sp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp"
                        />
                    <RelativeLayout
                        android:id="@+id/collect_rl"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/proNameTv"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/collect_iv"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/design_take_pic"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/proPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/proNameTv"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorPrimaryRed"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/unPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/proNameTv"
                        android:paddingLeft="10dp"
                        android:textColor="@color/fontColor6"
                        android:layout_alignBottom="@id/proPriceTv"
                        android:layout_toRightOf="@id/proPriceTv"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/select_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_rl"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/type_tv"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:textColor="#555555"
                            android:textSize="15dp"
                            android:text="请选择购买数量分类"
                            />
                        <ImageView
                            android:id="@+id/type_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_right_normal"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/rl_2"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        >
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/spacing_normal"
                            android:layout_toLeftOf="@+id/tv_good_detail_tuodong"
                            android:background="@color/deep_transparent" />
                        <TextView
                            android:id="@+id/tv_good_detail_tuodong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="继续拖动,查看图文详情"
                            android:textSize="@dimen/font_small" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_toRightOf="@+id/tv_good_detail_tuodong"
                            android:background="@color/deep_transparent" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </bc.juhao.com.ui.view.MyScrollView>
        <bc.juhao.com.ui.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
