<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/logistics_name_rl"
        style="@style/mine_item_style02"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/consignee_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/consignee"
            android:textColor="@color/fontColor2"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/consignee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/consignee_title_tv"
            android:text="小五"
            android:textColor="@color/fontColor2"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="131358745454"
            android:textColor="@color/fontColor2"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/address_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_title_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/my_address02"
            android:textColor="@color/fontColor6"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_title_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/address_title_tv"
            android:text="广东省佛山市禅城区"
            android:textColor="@color/fontColor6"
            android:textSize="14dip" />
    </RelativeLayout>

    <View
        style="@style/view_style"
        android:layout_marginTop="3dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <bc.juhao.com.ui.view.TextViewPlus
            android:id="@+id/default_addr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/shopping_icon_sel"
            android:drawablePadding="10dp"
            android:text="@string/defaults_address"
            android:textColor="@color/green"
            android:textSize="13sp"
            app:left_height="18dp"
            app:left_width="18dp" />

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="@drawable/bg_corner_5"
            android:gravity="center"
            android:padding="5dp"
            android:text="编辑"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_corner_5"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color" />
</LinearLayout>